<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/day_txt"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="MON"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal|bottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/day_icon"
        app:layout_constraintTop_toBottomOf="@id/day_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="96dp"
        android:padding="10dp"
        android:layout_height="96dp"/>

    <TextView
        android:id="@+id/day_precipitation"
        app:layout_constraintTop_toBottomOf="@id/day_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="10dp"
        android:gravity="bottom|center_horizontal"
        android:layout_height="wrap_content"
        android:text="20%"
        android:textColor="@color/precipitationColor"/>

    <TextView
        android:id="@+id/day_temperatures"
        app:layout_constraintTop_toBottomOf="@id/day_precipitation"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="10dp"
        android:gravity="bottom|center_horizontal"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:text="@string/temps_holder"/>

</androidx.constraintlayout.widget.ConstraintLayout>